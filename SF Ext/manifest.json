{
  "manifest_version": 3,
  "name": "dg MediaMind Support Extension",
  "description": "This extension is for help with Support usage of SF",
  "version": "3.0",

  "permissions": [
    "<all_urls>","webRequest","webRequestBlocking","cookies", "tabs","storage", "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": ["https://sizmek.my.salesforce.com/console/*"],      
      "js": ["sfmod.js"],
	  "all_frames": true,
	  "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
		"images/stat.png",
		"images/settingIcon.png",
		"images/dgBack.png",
		"images/dgLogo.png",
		"sfmod_plugin.js"
  ],
  "browser_action": {
    "default_icon": "icon.png"    
  }  
}